<?xml version="1.0" encoding="UTF-8" ?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">
    <service verb="create" noun="Party" type="entity-auto" >
        <in-parameters>
            <auto-parameters entity-name="tutorial.party.Party" include="nonpk"/>
        </in-parameters>
        <out-parameters>
            <auto-parameters entity-name="tutorial.party.Party" include="pk"/>
        </out-parameters>
    </service>

    <service verb="createPerson" noun="Person">
        <in-parameters>
            <auto-parameters entity-name="tutorial.party.Person"/>
            <parameter name="partyId" required="true"/>
            <parameter name="firstName" required="true" >
                <text-length min="2"/>
            </parameter>
            <parameter name="lastName" required="true">
                <text-length min="2"/>
            </parameter>
        </in-parameters>

        <out-parameters>
            <parameter name="successMessage"/>
        </out-parameters>

        <actions>
            <entity-find-one entity-name="tutorial.party.Party" value-field="party"/>
            <if condition="party.partyTypeEnumId == 'PERSON'">
                <service-call name="create#Person" in-map="context" out-map="context"/>
                <set field="successMessage"
                     value="Person ${firstName} ${lastName} created successfully!"/>
                <else>
                    <script>
                        ec.message.addError("Party Type Must be Person")
                    </script>
                </else>
            </if>
        </actions>
    </service>

    <service verb="create" noun="PersonGroovy" type="script" location="component://final-party/script/createPerson.groovy">
        <in-parameters>
            <auto-parameters entity-name="tutorial.party.Person"/>
        </in-parameters>
        <out-parameters>
            <parameter name="responseMessage"/>
        </out-parameters>
    </service>
</services>